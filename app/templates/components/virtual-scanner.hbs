<h3>Live streaming from CrimeIsDown (Beta)</h3>
<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <label for="streamlist">Select a stream to play</label>

      <fieldset onchange={{action "changeStreams" value="target"}} id="streamlist" style="width:auto">
        <legend>Select a stream</legend>
        {{#each streams as |streamOption|}}
          <div class="checkbox">
            <label><input type="checkbox" name="stream" value={{streamOption}}> {{streamOption}}</label>
          </div>
        {{/each}}
      </fieldset>
    </div>
  </div>
  <div class="col-md-6">
    <style>
      .draggable-parent {
        width: 200px;
        height: 200px;
        background: #fff
      }
      .draggable {
        width: 16px;
        height: 16px;
        text-align: center;
      }
      .draggable::after {
        font-family: Arial, sans-serif;
        font-size: 1em;
      }
    </style>
    <div class="draggable-parent">
      <i class="fa fa-user" style="transform: translate(92px, 92px)"></i>
    </div>
    {{#each enabledStreams as |stream|}}
      {{#audio-stream stream=stream.name}}
      {{/audio-stream}}
    {{/each}}
  </div>
</div>