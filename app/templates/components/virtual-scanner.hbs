<h3>Live streaming from CrimeIsDown (Beta)</h3>
<div class="form-group">
  <label for="streamlist">Select a stream to play</label>
  <select onchange={{action "stream" value="target.value"}} id="streamlist" class="form-control" style="width:auto" required>
    <option value="" disabled selected>Select a stream</option>
    {{#each streams as |streamOption|}}
      <option value={{streamOption}}>{{streamOption}}</option>
    {{/each}}
  </select>
</div>
<div>
  <video id="streamplayer" controls></video>
  <div class="form-group">
    <button onclick={{action "seek" -10}} class="btn btn-info">Rewind 10s</button>
    <button onclick={{action "seek" 999}} class="btn btn-danger">Live</button>
  </div>
</div>
