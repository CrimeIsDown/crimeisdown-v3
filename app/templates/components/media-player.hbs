{{#if @shadow}}
<div id="shadow-media-player{{@idSuffix}}" {{did-insert (fn this.initializeMediaPlayer @src @type @idSuffix)}} {{will-destroy this.teardownMediaPlayer}}></div>
{{else}}
<audio id="videojs-player{{@idSuffix}}" class="video-js vjs-default-skin vjs-fluid" src="{{@src}}" {{did-insert (fn this.initializeMediaPlayer @src @type @idSuffix)}}>
</audio>
<div id="timeline{{@idSuffix}}"></div>

<div class="input-group mb-3">
  <span class="input-group-text"><FaIcon @icon="search-minus" /></span>
  <input class="form-control" name="zoom" type="range" min={{this.minZoom}} max={{this.maxZoom}} step="1" value={{this.currentZoom}} {{on "change" this.zoom}} aria-label="Zoom control">
  <span class="input-group-text"><FaIcon @icon="search-plus" /></span>
</div>
{{/if}}
