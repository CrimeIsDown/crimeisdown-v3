<div class="modal fade" id="add-incident-modal" tabindex="-1" role="dialog" aria-labelledby="modalTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <form {{action "addIncident" on="submit"}}>
        <div class="modal-header">
          <h5 class="modal-title" id="modalTitle">{{if model.id "Edit" "Add a new"}} incident</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label for="submitterName">Submitter Name</label>
            <input type="text" class="form-control" id="submitterName" placeholder="Your name" required>
          </div>
          <div class="form-group">
            <label for="callType">Call Type</label>
            <select class="form-control" id="callType" required>
              {{#each callTypes as |callType|}}
                <option value="{{callType.slug}}">{{callType.name}}</option>
              {{/each}}
            </select>
          </div>
          <div class="form-group">
            <label for="address">Address</label>
            <input type="text" class="form-control" id="address" value="{{ location.meta.formattedAddress }}" required>
          </div>
          <div class="form-group">
            <fieldset>
              <legend>Agencies responding</legend>
              {{#each agencies as |agency|}}
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="{{agency.slug}}" id="agency{{agency.slug}}">
                  <label class="form-check-label" for="agency{{agency.slug}}">{{agency.name}}</label>
                </div>
              {{/each}}
            </fieldset>
          </div>
          <div class="form-group">
            <label for="description">Description</label>
            <textarea class="form-control" id="description" rows="3"></textarea>
          </div>
          <div class="form-group">
            <label for="tweetUrl">Tweets</label>
            <input type="url" class="form-control" id="tweetUrl" placeholder="https://twitter.com/...">
          </div>
          <div class="form-group">
            <label for="photoUrl">Photos</label>
            <input type="url" class="form-control" id="photoUrl" placeholder="https://twitter.com/...">
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Create</button>
        </div>
      </form>
    </div>
  </div>
</div>
<div>
  {{#each incidents as |incident|}}
    <div class="card">
      <div class="card-body">
        <pre>{{json incident}}</pre>
      </div>
    </div>
  {{/each}}
</div>