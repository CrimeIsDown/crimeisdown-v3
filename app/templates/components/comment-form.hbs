{{#if showForm}}
  <h5>{{if update "Edit" "New"}} Comment</h5>
  <form {{action (if update "update" "create") on="submit"}}>
    <div class="form-group">
      <label for="author">Author</label>
      {{input type="text" class="form-control" id="author" value=comment.author}}
    </div>
    <div class="form-group">
      <label for="content">Content</label>
      {{input type="text" class="form-control" id="content" value=comment.body}}
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <button class="btn btn-secondary" {{action (mut showForm) false}}>Cancel</button>
  </form>
{{else}}
  <div class="btn-group">
    {{#if update}}
      <button type="button" class="btn btn-danger btn-sm" aria-label="Delete comment" {{action "delete"}}>
        <span aria-hidden="true">&times;</span>
      </button>
      <button class="btn btn-sm btn-info" {{action (mut showForm) true}}>Edit</button>
    {{else}}
      <button class="btn btn-info" {{action (mut showForm) true}}>New Comment</button>
    {{/if}}
  </div>
{{/if}}