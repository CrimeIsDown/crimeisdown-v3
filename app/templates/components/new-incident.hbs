<div class="modal fade" id="add-incident-modal" tabindex="-1" role="dialog" aria-labelledby="addModalTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <form {{action "create" on="submit"}}>
        <div class="modal-header">
          <h5 class="modal-title" id="addModalTitle">Add a new incident</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label for="submitterName">Submitter Name</label>
            {{input type="text" class="form-control" id="submitterName" placeholder="Your name" required=true value=incident.submitterName}}
          </div>
          <div class="form-group">
            <label for="incidentTitle">Title</label>
            {{input type="text" class="form-control" id="incidentTitle" placeholder="Call title" required=true value=incident.title}}
          </div>
          <div class="form-group">
            <label id="callTypeLabel">Call Type</label>
            {{#power-select
              ariaLabelledBy="callTypeLabel"
              options=callTypes
              selected=incident.callType
              placeholder="Select call type"
              onchange=(action (mut incident.callType))
              renderInPlace=true
            as |callType|
            }}
              {{callType.name}}
            {{/power-select}}
          </div>
          <div class="form-group">
            <label for="address">Address</label>
            {{input type="text" class="form-control" id="address" value=incident.address required=true}}
          </div>
          <div class="form-group">
            <label id="unitsLabel">Units responding</label>
            {{#power-select-multiple
              ariaLabelledBy="unitsLabel"
              options=units
              selected=incident.units
              placeholder="Attach units to call"
              onchange=(action (mut incident.units))
              renderInPlace=true
            as |unit|
            }}
              {{unit.radioId}}
            {{/power-select-multiple}}
          </div>
          <div class="form-group">
            <label for="description">Description</label>
            {{textarea class="form-control" id="description" rows="3" value=incident.description}}
          </div>
          <div class="form-group">
            <label for="tweetUrl">Tweets</label>
            <input type="url" class="form-control" id="tweetUrl" placeholder="https://twitter.com/...">
          </div>
          <div class="form-group">
            <label for="photoUrl">Photos</label>
            <input type="url" class="form-control" id="photoUrl" placeholder="https://twitter.com/...">
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary" data-dismiss="modal">Create</button>
        </div>
      </form>
    </div>
  </div>
</div>
<button class="btn btn-default" data-toggle="modal" data-target="#add-incident-modal">New Incident</button>