<div id="radio-search">
  <div 
    {{react this.simpleSearchComponent 
      id="radio-id" 
      labelText="Radio ID"
      exampleText="Example: 1234, 599, 2-1-8, 100X"
      ariaDescribedBy="radio-id-desc" 
      onSearch=this.lookupRadioId
    }} 
  />
  <div class="results">
    <table class="table table-bordered table-condensed">
      <tbody>
      <tr>
        <th scope="row">Agency</th>
        <td id="agency">{{this.radio.agency}}</td>
      </tr>
      <tr>
        <th scope="row">Level 1 (Bureau)</th>
        <td id="level1">{{this.radio.level1}}</td>
      </tr>
      <tr>
        <th scope="row">Level 2 (Division)</th>
        <td id="level2">{{this.radio.level2}}</td>
      </tr>
      <tr>
        <th scope="row">Level 3 (Section)</th>
        <td id="level3">{{this.radio.level3}}</td>
      </tr>
      <tr>
        <th scope="row">Level 4 (Unit/Assignment)</th>
        <td id="level4">{{this.radio.level4}}</td>
      </tr>
      </tbody>
    </table>
  </div>
</div>
