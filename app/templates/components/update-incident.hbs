<form {{action "update" on="submit"}}>
  <div class="modal-header">
    <h5 class="modal-title" id="modalTitle">Update incident</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="modal-body">
    <div class="form-group">
      <label for="updateSubmitterName">Submitter Name</label>
      {{input type="text" class="form-control" id="updateSubmitterName" placeholder="Your name" required=true value=incident.submitterName}}
    </div>
    <div class="form-group">
      <label for="updateIncidentTitle">Title</label>
      {{input type="text" class="form-control" id="updateIncidentTitle" placeholder="Call title" required=true value=incident.title}}
    </div>
    <div class="form-group">
      <label id="updateCallTypeLabel">Call Type</label>
      {{#power-select
        ariaLabelledBy="updateCallTypeLabel"
        options=callTypes
        selected=incident.callType
        placeholder="Select call type"
        onchange=(action (mut incident.callType))
      as |callType|
      }}
        {{callType.name}}
      {{/power-select}}
    </div>
    <div class="form-group">
      <label for="updateAddress">Address</label>
      {{input type="text" class="form-control" id="updateAddress" value=incident.address required=true}}
    </div>
    <div class="form-group">
      <label id="updateUnitsLabel">Units responding</label>
      {{#power-select-multiple
        ariaLabelledBy="updateUnitsLabel"
        options=units
        selected=incident.units
        placeholder="Attach units to call"
        onchange=(action (mut incident.units))
      as |unit|
      }}
        {{unit.radioId}}
      {{/power-select-multiple}}
    </div>
    <div class="form-group">
      <label for="updateDescription">Description</label>
      {{textarea class="form-control" id="updateDescription" rows="3" value=incident.description}}
    </div>
    <div class="form-group">
      <label for="updateTweetUrl">Tweets</label>
      <input type="url" class="form-control" id="updateTweetUrl" placeholder="https://twitter.com/...">
    </div>
    <div class="form-group">
      <label for="updatePhotoUrl">Photos</label>
      <input type="url" class="form-control" id="updatePhotoUrl" placeholder="https://twitter.com/...">
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
    <button type="submit" class="btn btn-primary">Update</button>
  </div>
</form>
